    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "${input:host}",
                "port": 5678
            },
            "justMyCode": true
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
    ],
    "inputs": [
        {
            "id": "host",
            "description": "Hostname of server to attach",
            "type": "promptString"
        }
    ]
}